mixin header()
    header.header#header 
        .container.header__con 
            button.header__menu menu <span class="header__con-back-btn" />
            a.header__logo(href="#") ExChange-rates 
            .header__lang 
                .header__lang-title
                    p uz
                .header__lang-toggle
                    .header__lang-toggle-btn.active
                        p uz
                    .header__lang-toggle-btn
                        p ru
                    .header__lang-toggle-btn
                        p en