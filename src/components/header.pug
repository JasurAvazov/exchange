mixin header()
    header.header 
        .container.header__con 
            button.header__menu menu <span />
            a.header__logo(href="#") logo
            .header__lang
                .header__lang-title
                    p uz
                .header__lang-toggle
                    .header__lang-toggle-btn.active
                        p uz
                    .header__lang-toggle-btn
                        p ru
                    .header__lang-toggle-btn
                        p en